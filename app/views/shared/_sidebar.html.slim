nav
  div.nav.nav-tabs.nav-fill role='tablist'
    a#fridge-tab.nav-link.active data-bs-toggle='tab' data-bs-target='#fridge' type='button' role='tab' aria-controls='fridge' aria-selected='true' title=I18n.t(:fridge, scope: [:navbar, :sidebar])
      i.bi.bi-house-fill.fs-xl
    a#shop-tab.nav-link data-bs-toggle='tab' data-bs-target='#shopping-cart' type='button' role='tab' aria-controls='fridge' aria-selected='false' title=I18n.t(:shopping_cart, scope: [:navbar, :sidebar])
      i.bi.bi-cart-fill.fs-xl

div#tabContent.tab-content
  div#fridge.tab-pane.fade.show.active role='tabpanel' aria-labelledby='fridge-tab'
    = render 'shared/sidebar/fridge'
  div#shopping-cart.tab-pane.fade role='tabpanel' aria-labelledby='shop-tab'
    = render 'shared/sidebar/shopping_cart'
= button_to I18n.t(:btn_ingredients, scope: [:navbar, :sidebar]), ingredients_path, method: :get, class: 'btn btn-ingredients'

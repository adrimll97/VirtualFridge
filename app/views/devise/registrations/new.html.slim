= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  - if resource.errors.any?
    div.errors
      = render "devise/shared/error_messages", resource: resource
  .devise-form.center-screen
    .form-header
      h4.form-title= I18n.t(:sign_up, scope: [:devise, :views])
    .form-body
      div.container
        .field
          = f.label I18n.t(:name, scope: [:user, :attributes])
          br
          = f.text_field :name, autofocus: true
        .field
          = f.label I18n.t(:email, scope: [:user, :attributes])
          br
          = f.email_field :email, autocomplete: "email"
        .field
          = f.label I18n.t(:password, scope: [:user, :attributes])
          - if @minimum_password_length
            em.subtext= "(#{I18n.t(:minimum_length, scope: [:devise, :views], count: @minimum_password_length)})"
          br
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label I18n.t(:password_confirmation, scope: [:user, :attributes])
          br
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit I18n.t(:sign_up, scope: [:devise, :views]), class:"btn btn-primary btn-devise"
    .form-footer

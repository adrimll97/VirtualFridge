div.col-md-12.col-lg-12
  div.row
    = render partial: 'shared/search', locals: { zone: 'recetas' }
    - @recipes.each do |recipe|
      div.col-md-2
        div.recipe
          / = link_to ingredient_path(recipe), remote: true do
          div.recipe_image
            / = image_tag(recipe.image.medium_fill.url) if recipe.image.present?
          div.recipe_name
            = recipe.name

= paginate @recipes, theme: 'bootstrap-5'

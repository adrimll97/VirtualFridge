$("div#messages").html("");

<% if @fridge_ingredient.errors.any? %>
    $("div#messages").addClass("errors");
  <% @fridge_ingredient.errors.full_messages.each do |message| %>
    $("div.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $("#fridgeIngredientModal").modal("hide");
<% end %>

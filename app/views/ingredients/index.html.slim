h1.text-center= I18n.t(:title, scope: :ingredients)
div.border-bottom-secondary
br
div.col-md-12.col-lg-12
  div.row
    = render partial: 'shared/search', locals: { zone: 'ingredients' }
    - @ingredients.each do |ingredient|
      div.col-md-3
        div.ingredient
          = link_to ingredient_path(ingredient), remote: true do
            div.ingredient_image
              - if ingredient.image.present?
                = image_tag(ingredient.image.medium_fill.url, alt: ingredient.name)
              - else
                = image_tag('default-ingredients.png', alt: ingredient.name)
            div.ingredient_name
              = ingredient.name

= paginate @ingredients, theme: 'bootstrap-5'

.modal.fade id="ingredientModal"
  .modal-dialog.modal-sm
    .modal-content
      = form_for @ingredient, url: create_user_ingredient_ingredient_path(@ingredient), method: :post, remote: true do |f|
        .modal-header.bg-light-brown
          h5.modal-title
            a href="#{@ingredient.url}" target='_blank' #{@ingredient.name}
          button.btn-close type='button' data-bs-dismiss='modal' aria-label="Close"
        .modal-body
          div#messages
          div.container
            div.ingredient_image
              = image_tag(@ingredient.image.url, width: '100%') if @ingredient.image.present?
            div.ingredient_quantity
              = I18n.t(:ingredient_quantity, scope: :ingredients, number: @ingredient.quantity_number, unit: @ingredient.quantity_unit)
        .modal-footer.space-between
          = f.submit 'Nevera', name: 'fridge', class: 'btn btn-primary'
          = f.submit 'Carrito', name: 'shopping_cart', class: 'btn btn-primary'

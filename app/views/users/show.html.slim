div.row.border-bottom-secondary
  div.col-md-11
    h1= "#{current_user.name}"
    h5= "#{current_user.email}"
  div.col-md-1.lh-5
    = link_to edit_user_registration_path, class: 'btn fs-l primary-hover', method: :get, title: I18n.t(:edit_user, scope: [:devise, :views])
      i.bi.bi-pencil-fill

nav.mt-4
  div.nav.nav-tabs.nav-fill.nav-menu role='tablist'
    a#recipes-tab.nav-link.rounded-start.active data-bs-toggle='tab' data-bs-target='#recipes' type='button' role='tab' aria-controls='recipes' aria-selected='true'
      = I18n.t(:recipes, scope: :navbar)
    a#favorite_recipes-tab.nav-link.rounded-start data-bs-toggle='tab' data-bs-target='#favorite_recipes' type='button' role='tab' aria-controls='favorite_recipes' aria-selected='false'
      = 'Recetas favoritas'
    a#menus-tab.nav-link.rounded-end data-bs-toggle='tab' data-bs-target='#menus' type='button' role='tab' aria-controls='menus' aria-selected='false'
      = I18n.t(:menus, scope: :navbar)

div#tabContent.tab-content.text-center.overflow-visible
  div#recipes.tab-pane.fade.show.active role='tabpanel' aria-labelledby='recipes-tab'
    = link_to I18n.t(:create_recipe, scope: :profile), new_recipe_path, method: :get, class: 'btn btn-primary mb-3'
    = render partial: 'shared/recipes', locals: { recipes: @recipes }
  div#favorite_recipes.tab-pane.fade role='tabpanel' aria-labelledby='favorite_recipes-tab'
    = render partial: 'shared/recipes', locals: { recipes: @favorite_recipes }
  div#menus.tab-pane.fade role='tabpanel' aria-labelledby='menus-tab'
    = link_to I18n.t(:create_menu, scope: :profile), new_menu_path, method: :get, class: 'btn btn-primary mb-3'
    = render 'shared/menus'
